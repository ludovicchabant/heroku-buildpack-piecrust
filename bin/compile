#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.3.10"
PHP_PATH="php"
PIECRUST_VERSION="dev"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move raw PieCrust website to the cache
mkdir -p $CACHE_DIR/kitchen
mv * $CACHE_DIR/kitchen

# prepare the www public folder
mkdir -p www

# keep Procfile
if [ -f $CACHE_DIR/kitchen/Procfile ]; then
  mv $CACHE_DIR/kitchen/Procfile .
fi

APACHE_URL="https://s3.amazonaws.com/php-lp/apache-$APACHE_VERSION.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

PHP_URL="https://s3.amazonaws.com/php-lp/php-$PHP_VERSION.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz

PIECRUST_URL="http://backend.bolt80.com/piecrust/piecrust-$PIECRUST_VERSION.phar"
echo "-----> Bundling PieCrust version $PIECRUST_VERSION"
curl --silent --max-time 60 --location "$PIECRUST_URL" > $CACHE_DIR/piecrust-$PIECRUST_VERSION.phar

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php

# correctly set LD_LIBRARY_PATH for this script
# (looks like Heroky loads it from the app config only later)
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/app/php/ext

# figure out how to serve the website (dynamic or baked)
echo "-----> Reading PieCrust Heroku settings"
PIECRUST_CHEF="$CACHE_DIR/piecrust-$PIECRUST_VERSION.phar --root=$CACHE_DIR/kitchen"
HEROKU_BUILD=`bin/php $PIECRUST_CHEF showconfig heroku/build_type`
if [ "$HEROKU_BUILD" == "" ]; then
    HEROKU_BUILD=baked
fi
if [ "$HEROKU_BUILD" == "baked" ]; then
    # bake the website
    echo "-----> Baking the site"
    bin/php $PIECRUST_CHEF bake --output=www
elif [ "$HEROKU_BUILD" == "dynamic" ]; then
    # add a bootstrap and keep the .phar
    echo "-----> Moving PieCrust binary and creating bootstrap"
    mv $CACHE_DIR/piecrust-$PIECRUST_VERSION.phar /app
    cat >>www/index.php <<EOF
<?php
include 'phar:///app/piecrust.phar/piecrust.php';
piecrust_run();
EOF
fi

cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*
